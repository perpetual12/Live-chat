# React Environment Variables
# Note: Only variables prefixed with REACT_APP_ are accessible in the browser

# API Configuration
REACT_APP_API_BASE_URL=http://localhost:3010
REACT_APP_SOCKET_URL=http://localhost:3010

# Feature Flags
REACT_APP_ENABLE_NOTIFICATIONS=true
REACT_APP_ENABLE_SOUND_ALERTS=true
REACT_APP_ENABLE_TYPING_INDICATORS=true
REACT_APP_ENABLE_FILE_UPLOADS=false

# UI Configuration
REACT_APP_MAX_MESSAGE_LENGTH=1000
REACT_APP_MESSAGES_PER_PAGE=50
REACT_APP_AUTO_SCROLL_THRESHOLD=100

# Chat Configuration
REACT_APP_TYPING_TIMEOUT=3000
REACT_APP_CONNECTION_TIMEOUT=5000
REACT_APP_RECONNECTION_ATTEMPTS=5

# Theme Configuration
REACT_APP_DEFAULT_THEME=light
REACT_APP_ENABLE_DARK_MODE=true

# Analytics (for future use)
REACT_APP_GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX
REACT_APP_ENABLE_ANALYTICS=false

# Error Reporting (for future use)
REACT_APP_SENTRY_DSN=your_sentry_dsn_here
REACT_APP_ENABLE_ERROR_REPORTING=false

# Development Configuration
REACT_APP_DEBUG_MODE=false
REACT_APP_LOG_LEVEL=warn
